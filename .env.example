MODBUS_HOST=172.16.1.247
MODBUS_PORT=502
MODBUS_UNIT_ID=1
INVERTER_MODEL=ISOLAR_SMG_II_4K
LOCAL_IP=

# Database configuration
# Options: sqlite, mysql
DB_TYPE=sqlite
DB_PATH=inverter.db

# MySQL configuration (only used if DB_TYPE=mysql)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=eamoon

POLL_INTERVAL=10
BOT_POLL_INTERVAL=10
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Tuya Cloud API configuration (get from Tuya IoT Platform)
TUYA_ACCESS_ID=
TUYA_ACCESS_SECRET=
TUYA_USER_ID=
TUYA_ENDPOINT=https://openapi.tuyaeu.com
TUYA_APP_SCHEMA=smartlife

# Auto turn-off Tuya devices when grid power is lost (true/false)
TUYA_TURN_OFF_ON_POWER_LOSS=false

# Auto turn-on Tuya devices when grid power is restored (true/false)
TUYA_TURN_ON_ON_GRID_BACK=true

# Electricity schedule queue number for be-svitlo.oe.if.ua
QUEUE_NUMBER=5.2

# Path to store schedule snapshot for change notifications
SCHEDULE_SNAPSHOT_PATH=schedule_snapshot.json

# How often (minutes) to poll schedule API for changes (independent alerts)
SCHEDULE_CHECK_INTERVAL_MINUTES=10
